@using DataAccessLayer.ViewModel;
@{
    ViewData["Title"] = "Forgot Page";
    Layout = "_LoginLayout";
}

@model ForgotPasswordViewModel;

<div class="container-fluid bg-blue">
    <div class="row vh-100">
        <div class="col-12 col-md-6 p-0">
            <img src="~/images/dominos_background.jpg" alt="pizza" class="hero-img">
        </div>
        
        <div class="col-12 col-md-6 my-auto d-flex justify-content-center align-items-center">

            <div class="w-75 d-flex justify-content-center flex-column ">
                <div class="d-flex align-items-center justify-content-center mb-4">
                    <img src="~/images/logos/pizzashop_logo.png" class="pizzashop_logo me-2">
                    <span class="fs-1 hero-heading">PIZZASHOP</span>
                </div>

                <div class="d-flex">
   
                    <p class="fs-2 fw-bolder">Forgot Password</p>
                </div>

                <div class="mb-2">
                    Enter your email and we'll send you a link to reset your password.
                </div>
                
                <div class="">
                    <form asp-action="ForgotPassword" class="">
                        <!-- Email -->
                        <div class="input-group mb-3">
                            <input asp-for="Email" type="email" class="form-control login-input p-2" id="inputEmail" placeholder=" Email*">
                            <span class="input-group-text"><img src="~/images/icons/customer.svg"></span>
                        </div>

                        <div lass="mb-3">
                            <button type="submit" class="btn login-btn w-100 mb-3">Send</button>
                        </div>

                        <div class="d-flex align-items-center justify-content-center">
                            <a asp-controller="Home" asp-action="Login" class="text-decoration-none">Back to login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var email = localStorage.getItem('userEmail');
    if (email) {
        document.getElementById('inputEmail').value = email;
        
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>