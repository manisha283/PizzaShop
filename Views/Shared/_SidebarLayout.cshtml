<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    
    <div class="container-fluid bg-grey">
        <div class="row">

            <!-- Sidebar starts-->
            <div class="sidebar col-2 d-none d-lg-block vh-100 px-0">
                <!--Navigation Pane  -->
                <div class="d-flex flex-column">
                    <a href="#" class="pizzashop-text"><img src="images/logos/pizzashop_logo.png" alt="pizza shop logo" width="60x"> PIZZASHOP</a>
                    <a href="#" ><img src="images/navigation/dashboard.svg" alt=""> Dashboard </a>
                    <a href="#" class="side-dash"><img src="images/navigation/user.svg" alt=""> Users </a>
                    <a href="#"><img src="images/navigation/role.svg" alt=""> Role and Permission </a>
                    <a href="#"><img src="images/navigation/menu.png" alt="" height="20px"> Menu </a>
                    <a href="#"><img src="images/navigation/table.svg" alt=""> Table and Section </a>
                    <a href="#"><img src="images/navigation/taxes.svg" alt=""> Taxes and Fees </a>
                    <a href="#"><img src="images/navigation/orders.svg" alt=""> Orders </a>
                    <a href="#"><img src="images/navigation/customer.svg" alt=""> Customers </a>
                </div>
            </div>
            <!-- Sidebar ends-->

            <!-- Main content starts-->
            <div class="main-content col px-0">

                <!-- Navbar starts -->
                <nav>
                    <div class="d-flex justify-content-end p-3">
                        <img src="images/Default_pfp.svg.png" alt="profile" height="35px">
                    </div>
                </nav>
                <!-- Navbar ends -->
                
                <!-- User content starts -->
                <div class="px-5 py-2">
                    <main role="main" class="">
                        @RenderBody()
                    </main>
                </div>

            </div>
            <!-- User Content ends -->
                  
        </div>
        <!-- Main content ends -->
    </div> 


    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/custom.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
