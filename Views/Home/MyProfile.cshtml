@model MyProfileViewModel

@{
    ViewData["Title"] = "My Profile";
    Layout = "_SidebarLayout";
}

<!-- User heading, search and back button -->
<div class="d-flex justify-content-between users mb-3">
    <h1 class="blue-text">My Profile</h1>
    <a asp-controller="Users" asp-action="Index" class="btn btn-white">
        <img src="~/images/icons/chevron-left-blue.svg" alt="Back">
        <span>Back</span>
    </a>
</div>

<!-- Profile banner -->
<div>
    <img src="~/images/profile_div_bg.jpg" alt="Profile Background" class="object-fit-cover w-100" height="60px">
</div>

<!-- Profile Form -->
<div class="row bg-white px-3 pb-4 mx-0">
    <form asp-action="UpdateProfile" asp-controller="Profile" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <!-- Profile Image -->
        <div class="d-flex align-items-center">
            <img class="profile-img" src="@Model.ProfileImageUrl" width="50px">
            <div class="camera-div bg-white">
                <label for="profileImage">
                    <img class="camera-img" src="~/images/icons/camera.svg" alt="Upload Profile Image">
                </label>
                <input type="file" id="profileImage" name="ProfileImage" class="d-none">
            </div>
            <div class="w-100">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                    <span class="fs-3 fw-bold">@Model.FirstName @Model.LastName</span>
                    <span>@Model.Email</span>
                </div>
                <div class="fs-5">Admin</div>
            </div>
        </div>

        <!-- First Name -->
        <div class="col-12 col-sm-6 form-floating mb-3">
            <input asp-for="FirstName" class="form-control" placeholder="">
            <label asp-for="FirstName">First Name</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <!-- Last Name -->
        <div class="col-12 col-sm-6 form-floating mb-3">
            <input asp-for="LastName" class="form-control" placeholder="">
            <label asp-for="LastName">Last Name</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <!-- User Name -->
        <div class="col-12 col-sm-6 form-floating mb-3">
            <input asp-for="UserName" class="form-control" placeholder="">
            <label asp-for="UserName">User Name</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <!-- Phone -->
        <div class="col-12 col-sm-6 form-floating mb-3">
            <input asp-for="Phone" class="form-control" placeholder="">
            <label asp-for="Phone">Phone</label>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <!-- Country -->
        <div class="col-12 col-sm-4 form-floating mb-3">
            <select asp-for="Country" class="form-select">
                <option value="India">India</option>
                <option value="USA">USA</option>
                <option value="UK">UK</option>
            </select>
            <label asp-for="Country">Country</label>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <!-- State -->
        <div class="col-12 col-sm-4 form-floating mb-3">
            <input asp-for="State" class="form-control" placeholder="">
            <label asp-for="State">State</label>
            <span asp-validation-for="State" class="text-danger"></span>
        </div>

        <!-- City -->
        <div class="col-12 col-sm-4 form-floating mb-3">
            <input asp-for="City" class="form-control" placeholder="">
            <label asp-for="City">City</label>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <!-- Address -->
        <div class="col-12 col-sm-8 form-floating mb-3">
            <input asp-for="Address" class="form-control" placeholder="">
            <label asp-for="Address">Address</label>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <!-- Zip Code -->
        <div class="col-12 col-sm-4 form-floating mb-3">
            <input asp-for="ZipCode" class="form-control" placeholder="">
            <label asp-for="ZipCode">Zip Code</label>
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-end gap-3">
            <button type="submit" class="btn btn-blue">Update</button>
            <button type="reset" class="btn btn-white">Cancel</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
