@model PizzaShop.ViewModel.UsersListViewModel;
@{
    ViewData["Title"] = "Users";
    Layout = "_SidebarLayout";
}

<!-- User heading, search and add button -->
<div class="d-flex flex-column flex-sm-row justify-content-between users mb-3 ">
    <div>
        <h1 class="blue-text">Users</h1>
    </div>
    <div class="justify-content-end d-flex align-items-center">
        <div class="me-2">
            <form method="get" asp-action="UserList" asp-controller="Dashboard">
                <div class="input-group">
                    <input type="search" class="form-control" placeholder="Search" name="search" value="@Model.SearchTerm">
                    <button type="submit" class="input-group-text">
                        <img src="~/images/icons/search.svg" alt="">
                    </button>
                </div>
            </form>
        </div>
        <div>
            <a asp-action="AddUser" asp-controller="Dashboard" class="btn btn-blue text-nowrap">
                + Add users
            </a>
        </div>
    </div>
</div>

<!-- Table -->
<div class="table-responsive bg-white px-3">
    <table class="table user-table">
        <thead>
            <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Role</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach(var user in Model.User){
                <tr>
                <td scope="row">
                    <img src="@user.ProfileImageUrl" alt="" width="30px">
                    <span>@user.FirstName @user.LastName</span>
                </td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Role</td>
                <td>
                    <span class="@(user.Status==true?"bg-active":"bg-inactive")">@(user.Status==true?"Active":"Inactive")</span> 
                </td>
                <td>
                    <a href="edit-user.html" class="btn">
                        <img src="~/images/icons/edit.svg" alt=""/>
                    </a>
                    
                    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                        <img src="~/images/icons/delete.svg" alt="">
                    </button>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <!-- Pagination Starts -->
    <div class="d-flex justify-content-end gap-1 flex-column flex-md-row pb-2">
        <div class="d-flex flex-row justify-content-end align-items-center mb-1 me-1 gap-1">
            <span>Items per page:</span>
            <select class="form-select w-auto" aria-label="Default select example">
                <option selected>5</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
        <div class="d-flex flex-row justify-content-end align-items-center mb-1 gap-1">
    <span>Showing @(Model.User.Count > 0 ? ((Model.PageNumber - 1) * Model.PageSize + 1) : 0)
        -@((Model.PageNumber * Model.PageSize) > Model.TotalRecords ? Model.TotalRecords : (Model.PageNumber * Model.PageSize))
        of @Model.TotalRecords</span>

    <!-- Previous Button -->
    <a asp-action="UserList" asp-route-search="@Model.SearchTerm" asp-route-pageNumber="@(Model.PageNumber - 1)"
        asp-route-pageSize="@Model.PageSize" class="btn border @(Model.HasPreviousPage ? "" : "disabled")">
        <img src="~/images/icons/chevron-left.svg" alt="">
    </a>

    <!-- Next Button -->
    <a asp-action="UserList" asp-route-search="@Model.SearchTerm" asp-route-pageNumber="@(Model.PageNumber + 1)"
        asp-route-pageSize="@Model.PageSize" class="btn border @(Model.HasNextPage ? "" : "disabled")">
        <img src="~/images/icons/chevron-right.svg" alt="">
    </a>
</div>

        <!-- Pagination Ends -->
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">Delete Confirmation</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex flex-column justify-content-center align-items-center">
                <img src="~/images/icons/warning.svg" alt="" width="50px">
                <span>Are you sure you want to delete this user?</span> 
            </div>
            <div class="modal-footer d-flex justify-content-center">
                @* <button class="btn btn-danger" onclick="showDeleteModal(@user.UserId)">Delete</button> *@
                <button type="button" class="btn btn-white">No</button>
            </div>
        </div>  
    </div>
</div>

<script>
    let deleteUserId = 0;
    function showDeleteModal(userId) {
        deleteUserId = userId;
        $('#deleteModal').modal('show');
    }

    $('#confirmDelete').click(function () {
        $.ajax({
            url: '/Dashboard/DeleteUser/' + deleteUserId,
            type: 'POST',
            success: function (response) {
                location.reload();
            },
            error: function () {
                alert('Error deleting user');
            }
        });
    });
</script>