@using PizzaShop.Entity.ViewModels
@model ModifierViewModel

<div class="modal-header">
    <h1 class="modal-title fs-5" id="mModalToggleLabel">Add New Modifier</h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form asp-action="SaveModifier" asp-controller="Menu" id="SaveModifierForm" method="Post">
    <div class="modal-body">
        <div class="form addM-form row">

            <input asp-for="ModifierId" type="text" class="form-control" id="mId" hidden>

            <div class="col-12 col-sm-6 form-floating mb-3">
                <select asp-for="@Model.ModifierGroupId" class="form-select" aria-label="" id="selectModifierGroup">
                    <option selected value="-1">Select Modifier Groups(s)</option>
                    @foreach (var modifierGroup in Model.ModifierGroups)
                    {
                        <option value="@modifierGroup.Id"> @modifierGroup.Name</option>
                    }
                </select>
                <label for="selectModifierGroup">Modifier Groups*</label>
            </div>

            <div class="col-12 col-sm-6 form-floating mb-3">
                <input asp-for="ModifierName" type="text" class="form-control" placeholder="" id="mName">
                <label for="mName">Name*</label>
                <span asp-validation-for="ModifierName" class="text-danger"></span>
            </div>


            <div class="col-12 col-sm-6 col-md-4 form-floating mb-3">
                <textarea asp-for="Rate" class="form-control" rows="1" placeholder="" id="mRate"></textarea>
                <label for="mRate">Rate*</label>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            <div class="col-12 col-sm-6 col-md-4 form-floating mb-3">
                <textarea asp-for="Quantity" class="form-control" rows="1" placeholder="" id="mQuantity"></textarea>
                <label for="mQuantity">Quantity*</label>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

           <div class="col-12 col-sm-6 col-md-4 form-floating mb-3">
                <select asp-for="@Model.UnitId" class="form-select" aria-label="" id="mUnit">
                    <option selected value="">Select a type</option>
                    @foreach (var unit in Model.Units)
                    {
                        <option value="@unit.Id"> @unit.Name</option>
                    }
                </select>
                <label for="mUnit">Unit*</label>
            </div>

            <div class="col-12 form-floating mb-3">
                <textarea asp-for="Description" class="form-control" rows="1" placeholder="" id="mDesc"></textarea>
                <label for="mDesc">Description*</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        </div>


    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-blue btn-modal" id="saveModifier">Save</button>
        <button type="button" class="btn btn-white btn-modal" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
