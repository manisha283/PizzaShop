@model PizzaShop.Entity.ViewModels.LoginViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<div class="container-fluid bg-blue">
    <div class="row vh-100 bg-img">
        <!-- Pizza image left section -->
        <div class="col-md-6 d-none d-md-block p-0">
            <img src="images/dominos_background.jpg" alt="pizza" class="hero-img">
        </div>
        
        <!-- Right section -->
        <div class="col-12 col-md-6 my-auto d-flex justify-content-center align-items-center right-section">
            <div class="w-75 d-flex justify-content-center flex-column ">
                <div class="d-flex align-items-center justify-content-center mb-4">
                    <img src="images/logos/pizzashop_logo.png" class="pizzashop_logo me-2">
                    <span class="fs-1 hero-heading">PIZZASHOP</span>
                </div>

                <div class="d-flex">
                    <p class="fs-2 fw-bold">Welcome,</p>
                </div>
                
                <div>
                    <form asp-controller="Auth" asp-action="Login">
                        <!-- Email -->
                        <div class="mb-3">
                            <div class="input-group">
                                <input asp-for="Email" class="form-control login-input p-2" id="inputEmail" placeholder=" Email*" required>
                                <span class="input-group-text"><img src="images/icons/customer.svg"></span>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>                      

                        <!-- Password -->
                        <div class="mb-3">
                            <div class="input-group">
                                <input asp-for="Password" type="password" class="form-control login-input p-2" id="inputPassword1" placeholder=" Password*" required>
                                <span class="input-group-text"><img src="images/icons/hidden.png" width="16px"></span>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>                       


                        <!--Remember me and Forget Password-->
                        <div class="mb-3 d-flex justify-content-between rem_pass">
                             <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                    </label>
                                </div>
                            </div>

                            <div>
                                <a asp-action="ForgotPassword" asp-controller="Auth" id="forgotPasswordLink">Forgot password?</a>
                            </div>
                        </div>

                        <div>
                            <button type="submit" class="btn login-btn w-100">Login</button>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>        
</div>

<script src="~/js/login.js" asp-append-version="true"></script>

<script>
    document.getElementById("forgotPasswordLink").addEventListener("click", function (e) {
        // Prevent default link action
        e.preventDefault();

        //localStorage of email value
        var email = document.getElementById('inputEmail').value;
        localStorage.setItem('userEmail', email);

        // Redirect to ForgotPassword page
        window.location.href = '@Url.Action("ForgotPassword", "Auth")';
    });
</script>


